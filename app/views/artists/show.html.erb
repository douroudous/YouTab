<h2> <%= @artist.name %> </h2>

<div class="row">
  <p class="small-4 columns">Title</p>
  <p class="small-4 columns">Uploader</p>
  <p class="small-4 columns">Date</p>
  <% @artist.songs.each do |song| %>
    <p class="small-4 columns"><%= link_to song.title, song %> </p>
    <p class="small-4 columns"><%= link_to song.user.username, song.user %></p>
    <p class="small-4 columns"><%= song.created_at.strftime("%Y-%m-%d") %> </p>
  <% end %>
</div>

<div class="bottom-button">
  <p><%= link_to "Update Artist", edit_artist_path %></p>
  <p><%= link_to "Delete Artist", @artist, method: :delete %></p>
</div>
