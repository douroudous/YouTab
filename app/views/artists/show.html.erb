<div class="animated fadeIn">
  <h2> <%= @artist.name %> </h2>
  <h3><%= button_to "New Tab", entry_path, class: "button new-button", method: :get %></h3>
</div>

<div class="list-small row centered container">
  <div class="small-6 columns">
    <p>Title</p>
  </div>
  <div class="small-6 columns">
    <p>User</p>
  </div>
  <% @sorted_songs.each do |song| %>
      <div class="small-6 columns">
        <p><%= link_to "#{full_title(song)}", song, class: "link" %></p>
      </div>
      <div class="small-6 columns">
        <p><%= link_to song.user.username, song.user, class: "link" %></p>
      </div>
  <% end %>
  </div>
</br>

<% if current_user.admin %>
  <p><%= link_to "Update Artist", edit_artist_path, class: "link" %></p>
  <p><%= link_to "Delete Artist", @artist, data: {:confirm => 'Are you sure you want to delete this artist?'}, method: :delete, class: "link" %></p>
<% end %>
