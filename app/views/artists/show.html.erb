<h2 class="animated fadeIn"> <%= @artist.name %> </h2>
<h3><%= link_to "New #{@artist.name} Tab", new_artist_song_path(@artist) %></h3>

<div class="row">
  <p class="small-2 columns">Title</p>
  <p class="small-2 columns"># of Reviews</p>
  <p class="small-2 columns">Uploader</p>
  <p class="small-6 columns">Date</p>
  <% @artist.songs.each do |song| %>
    <p class="small-2 columns"><%= link_to song.title, song %> </p>
    <p class="small-2 columns"><%= song.reviews.length %></p>
    <p class="small-2 columns"><%= link_to song.user.username, song.user %></p>
    <p class="small-6 columns"><%= song.created_at.strftime("%Y-%m-%d") %> </p>
  <% end %>
</div>

<% if current_user.admin %>
  <p><%= link_to "Update Artist", edit_artist_path %></p>
  <p><%= link_to "Delete Artist", @artist, data: {:confirm => 'Are you sure you want to delete this artist?'}, method: :delete %></p>
<% end %>
