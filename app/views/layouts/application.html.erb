<!DOCTYPE html>
<html>
  <head>
    <title>YouTab</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="animate.css">
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1 class="you inline-block">You</h1>
      <h1 class="inline-block">Tab</h1>
      <nav>
        <li class="inline-block">
          <div class="dropbtn"><%= link_to "Tabs", root_path %></div>
        </li>
        <li class="inline-block">
          <div class="dropbtn"><%= link_to "Artists", artists_path %></div>
        </li>
        <li class="inline-block">
          <% if user_signed_in? %>
            <div class="dropbtn"><%= link_to 'Users', users_path%></div>
            <div class="dropbtn"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></div>
          <% else %>
            <div class="dropbtn"><%= link_to 'Sign In', new_user_session_path %></div>
            <div class="dropbtn"><%= link_to 'Sign Up', new_user_registration_path %></div>
          <% end %>
        </li>
      </nav>
    </header>

    <main>
      <% if notice.is_a?(Array) %>
        <% notice.each do |this_notice| %>
          <p class="notice"><%= this_notice %></p>
        <% end %>
      <%elsif notice %>
        <p class="notice"> <%= notice %></p>
      <% end %>

      <p class="alert"><%= alert %></p>

      <%= yield %>
    </main>

  </body>
</html>
