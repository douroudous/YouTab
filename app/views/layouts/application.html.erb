<!DOCTYPE html>
<html>
  <head>
    <title>YouTab</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="animate.css">
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <h1>YouTab</h1>
      <ul>
        <li class="top-menu"><%= link_to "Tabs", root_path %></li>
        <li class="top-menu"><%= link_to "Artists", artists_path %></li>
        <% if user_signed_in? %>
          <li class="top-menu"><%= link_to 'Users', users_path %></li>
          <li class="top-menu"> <%= link_to current_user.username, user_path(current_user) %></li>
          <li class="top-menu"> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li class="top-menu"><%= link_to 'Sign In', new_user_session_path %></li>
          <li class="top-menu"><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
      </ul>
    </nav>

    <% if notice.is_a?(Array) %>
      <% notice.each do |this_notice| %>
        <p class="notice"><%= this_notice %></p>
      <% end %>
    <%elsif notice %>
      <p class="notice"> <%= notice %></p>
    <% end %>

    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
