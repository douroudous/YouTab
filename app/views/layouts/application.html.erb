<!DOCTYPE html>
<html>
  <head>
    <title>YouTab</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="animate.css">
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>YouTab</h1>
    <nav>
      <div class="row container">
        <li class="dropdown">
          <div class="dropbtn"><%= link_to "Tabs", root_path, class: "top-menu"%></div>
          <div class="dropdown-content">
          </div>
        </li>
        <li class="dropdown">
          <div class="dropbtn"><%= link_to "Artists", artists_path, class: "top-menu" %></div>
          <div class="dropdown-content">
              <div><%= link_to "New Artist", new_artist_path, class: "top-menu" %></div>
          </div>
        </li>
        <li class="dropdown">
          <% if user_signed_in? %>
          <div class="dropbtn"><%= link_to 'Users', users_path, class: "top-menu" %></div>
          <div class="dropdown-content">
              <div> <%= link_to current_user.username, user_path(current_user), class: "top-menu" %></div>
              <div> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "top-menu" %></div>
          </div>
          <% else %>
          <div class="dropbtn"><%= link_to 'Sign In', new_user_session_path, class: "top-menu" %></div>
          <div class="dropdown-content">
              <div><%= link_to 'Sign Up', new_user_registration_path, class: "top-menu" %></div>
          </div>
          <% end %>
        </li>
      </div>
    </nav>

    <% if notice.is_a?(Array) %>
      <% notice.each do |this_notice| %>
        <p class="notice"><%= this_notice %></p>
      <% end %>
    <%elsif notice %>
      <p class="notice"> <%= notice %></p>
    <% end %>

    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
