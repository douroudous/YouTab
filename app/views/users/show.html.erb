<div class="animated fadeIn">
  <h2> <%= @user.username %> </h2>
  <h3> Joined: <%= @user.created_at.strftime("%Y-%m-%d") %> </h3>
  <% if @user.id == current_user.id %>
    <h3> <%= link_to 'Edit Account', edit_user_registration_path %> </h3>
  <% end %>
</div>
</br>

<% if @user.songs.length > 0 %>
  <% if @user.id == current_user.id %>
    <h3> My Tabs (<%= @user.songs.length %>)</h3>
  <% else %>
    <h3> <%= @user.username %>'s Tabs (<%= @user.songs.length %>)</h3>
  <% end %>
  <div class="row">
    <p class="small-2 columns">Date</p>
    <p class="small-2 columns">Title</p>
    <p class="small-8 columns">Artist</p>
    <% @user.songs.each do |song| %>
      <p class="small-2 columns"><%= song.created_at.strftime("%Y-%m-%d") %> </p>
      <p class="small-2 columns"><%= link_to "#{song.title}", song %> </p>
      <p class="small-8 columns"><%= link_to "#{song.artist.name}", song.artist %> </p>
    <% end %>
  </div>
  </br>
<% end %>

<% if @user.reviews.length > 0 %>
  <% if @user.id == current_user.id %>
    <h3> My Reviews (<%= @user.reviews.length %>)</h3>
  <% else %>
    <h3> <%= @user.username %>'s Reviews (<%= @user.reviews.length %>) </h3>
  <% end %>
  <div class="row">
    <p class="small-2 columns">Date</p>
    <p class="small-2 columns">Title</p>
    <p class="small-2 columns">Artist</p>
    <p class="small-2 columns">Rating</p>
    <p class="small-4 columns">Review</p>
    <% @user.reviews.each do |review| %>
      <p class="small-2 columns"><%= review.created_at.strftime("%Y-%m-%d") %> </p>
      <p class="small-2 columns"><%= link_to review.song.title, review.song %></p>
      <p class="small-2 columns"><%= link_to review.song.artist.name, review.song.artist %></p>
      <p class="small-2 columns"><%= review.rating %> </p>
      <p class="small-4 columns optional-field"><%= review.body %> </p>
    <% end %>
  </div>
<% end %>
