<div class="animated fadeIn">
  <h2>Users</h2>
</div>

<%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
<% end %>

</br>
  <% @users.each do |user| %>
    <div class="list-small row container centered">
      <p class="inline-block"><%= link_to user.username, user, class: "link" %></p>
      <% if ((user.id != current_user.id) && current_user.admin) %>
        <p class="inline-block">(<%= link_to "Delete", user, method: :delete, class: "link" %>)</p>
      <% end %>
    </div>
  <% end %>
